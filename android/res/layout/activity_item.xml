<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/focusItem"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/photo_caption"            
            android:src="@drawable/abc_ab_bottom_solid_dark_holo" />

        <ImageButton
            android:id="@+id/like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/focusItem"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:contentDescription="likes" />

        <TextView
            android:id="@+id/like_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/like_button"
            android:layout_toRightOf="@+id/like_button"
            android:textAppearance="?android:attr/textAppearanceLarge" />
         
        <ImageButton
            android:id="@+id/comment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/like_button"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:contentDescription="comments"
            android:onClick="openComments"
            android:src="@drawable/comment" />

        <TextView
            android:id="@+id/photo_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

</FrameLayout>